    <script>
        function togglePhase(phaseId) {
            const content = document.getElementById(phaseId);
            content.classList.toggle('expanded');
        }
        
        function toggleSkill(skillItem) {
            const checkbox = skillItem.querySelector('.skill-checkbox');
            checkbox.checked = !checkbox.checked;
            
            if (checkbox.checked) {
                skillItem.classList.add('completed');
            } else {
                skillItem.classList.remove('completed');
            }
            
            updateProgress();
        }
        
        function updateProgress() {
            const totalSkills = document.querySelectorAll('.skill-item').length;
            const completedSkills = document.querySelectorAll('.skill-item.completed').length;
            const percentage = Math.round((completedSkills / totalSkills) * 100);
            
            document.getElementById('overallProgress').style.width = percentage + '%';
            document.getElementById('progressText').textContent = percentage + '% Complete';
            document.getElementById('completedSkills').textContent = completedSkills;
            
            // Save progress to localStorage
            const progress = Array.from(document.querySelectorAll('.skill-checkbox')).map(cb => cb.checked);
            try {
                localStorage.setItem('echoverse-progress', JSON.stringify(progress));
            } catch(e) {
                // Handle case where localStorage isn't available
            }
        }
        
        // Load progress from localStorage
        function loadProgress() {
            try {
                const saved = localStorage.getItem('echoverse-progress');
                if (saved) {
                    const progress = JSON.parse(saved);
                    const skillItems = document.querySelectorAll('.skill-item');
                    progress.forEach((completed, index) => {
                        if (completed && skillItems[index]) {
                            skillItems[index].classList.add('completed');
                            skillItems[index].querySelector('.skill-checkbox').checked = true;
                        }
                    });
                    updateProgress();
                }
            } catch(e) {
                // Handle case where localStorage isn't available
            }
        }
        
        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            loadProgress();
        });
    </script>
